<h1>Login</h1>

<h3><%= flash[:notice] %></h3>

<%= form_tag profile_path, method: :post do %>
  <%= label_tag "Username" %>
  <%= text_field_tag :username %>
  <%= label_tag "Password" %>
  <%= password_field_tag :password %>
  <%= submit_tag "Login" %>
<% end %>

<li>
<%= button_to "Create Account", create_user_path, method: "get" %>
</li>
